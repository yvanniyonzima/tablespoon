<?xml version="1.0" encoding="utf-8"?>

<!-- Source: https://stackoverflow.com/questions/44612585/how-to-add-border-to-edittext-in-android/44612619 -->
<!-- this is to  make the boarder of text fields black -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Color -->
    <solid android:color="#ffffff" />

    <!-- Border Color -->
    <stroke android:width="2dp" android:color="#000000" />

    <!-- Round Corners -->
    <corners android:radius="5dp" />
</shape>